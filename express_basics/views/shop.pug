doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/shop.css")
    body
        header.shop-header
            nav.shop-header__nav 
                ul.shop-header__ul
                    li.shop-header__li 
                        a.active(href="/shop/home") Shop
                    li.shop-header__li 
                        a.active(href="/admin/addProduct") Add Product
        main
            if prods.length > 0
                div.grid
                    each product in prods
                        article.card_item 
                            header.card_header 
                                h1.product_title #{product.title}
                            div.product_image 
                                img(src="https://www.google.com/imgres?imgurl=https%3A%2F%2Fthumbs.dreamstime.com%2Fb%2Flandscape-natural-lmage-130994953.jpg&tbnid=WkDC901E0PcEBM&vet=12ahUKEwiRnrrd9eT-AhXIHbcAHVleDJkQMygBegUIARDZAQ..i&imgrefurl=https%3A%2F%2Fwww.dreamstime.com%2Fphotos-images%2Flmage.html&docid=SZmC_MOxMuA7NM&w=800&h=653&q=lmages&ved=2ahUKEwiRnrrd9eT-AhXIHbcAHVleDJkQMygBegUIARDZAQ", alt="Averi's Treasure")
                            div.card_content
                                h2.product_price $19.99
                                h2.product_description An adventure book
                            div.card_actions
                                button.btn Add to Cart
            else
                h1 No Products found.
